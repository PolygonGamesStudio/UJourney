<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#212124"><!--#08c463-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ID"
            android:id="@+id/nodeID"

            android:textColor="@color/white" android:visibility="invisible"/>
    <TextView
            android:id="@+id/node_text"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ededed"
            android:text="Поверните на Большой Спасоглинищевский переулок"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="16dp"
            />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_arrow_right_normal"
            android:layout_alignParentRight="true"/>
</RelativeLayout>
