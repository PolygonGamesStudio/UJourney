<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="РЕЙТИНГ МЕСТА"
            android:id="@+id/headerTextView"
            android:textStyle="bold"
            android:textSize="14dp"

            android:layout_marginLeft="14dp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"/>
    <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/headerTextView"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/line"
                  android:orientation="horizontal"
            >
        <ImageView
                android:id="@+id/star_1"
                android:src="@drawable/btn_star_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/star_1"
                />

        <ImageView
                android:id="@+id/star_2"
                android:src="@drawable/btn_star_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/star_1"/>

        <ImageView
                android:id="@+id/star_3"
                android:src="@drawable/btn_star_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/star_2"/>

        <ImageView
                android:id="@+id/star_4"
                android:src="@drawable/btn_star_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/star_3"/>

        <ImageView
                android:id="@+id/star_5"
                android:src="@drawable/btn_star_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/star_4"/>
    </LinearLayout>
</RelativeLayout>